# ============================================
# API GATEWAY ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Service URLs (Docker Compose uses service names as hostnames)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
COURSE_SERVICE_URL=http://course-service:3003
BOOKING_SERVICE_URL=http://booking-service:3004
CHAT_SERVICE_URL=http://chat-service:3005
RECOMMENDATION_SERVICE_URL=http://recommendation-service:3006

# JWT Configuration (must match Auth Service)
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
SERVICE_JWT_SECRET=service-to-service-secret-key-change-in-production

# Gateway Configuration
SERVICE_TIMEOUT=30000
MAX_RETRIES=3
ENABLE_REQUEST_LOGGING=true
