# Gateway Configuration
PORT=3000
NODE_ENV=production
CORS_ORIGIN=https://yourdomain.com

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-me
SERVICE_JWT_SECRET=service-to-service-secret-key-min-32-characters-long-change-me

# Redis
REDIS_URL=redis://redis:6379

# Supabase (Add your Supabase credentials)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Firebase (Optional - for Firebase Auth)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key
